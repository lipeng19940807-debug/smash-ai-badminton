/* pages/report/report.wxss */
.page-container {
  min-height: 100vh;
  background: #0a1216;
  color: #ffffff;
  padding-bottom: 200rpx;
}

/* 顶部导航栏 */
.header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(10, 18, 22, 0.8);
  backdrop-filter: blur(10px);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
}

.back-btn {
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #19baf0;
}

.back-icon {
  font-size: 48rpx;
  font-weight: bold;
}

.header-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
}

.header-right {
  width: 96rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.info-icon {
  font-size: 40rpx;
}

/* 内容区域 */
.content {
  flex: 1;
}

/* 速度展示区域 */
.speed-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx 32rpx 64rpx;
}

.speed-label {
  font-size: 28rpx;
  color: #19baf0;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 4rpx;
  margin-bottom: 16rpx;
}

.speed-display {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin-bottom: 48rpx;
}

.speed-number {
  font-size: 160rpx;
  color: #ffffff;
  font-weight: 900;
  line-height: 1;
  text-shadow: 0 0 60rpx rgba(25, 186, 240, 0.5);
  font-style: italic;
}

.speed-unit {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: bold;
}

.speed-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 48rpx;
  background: rgba(25, 186, 240, 0.1);
  border: 1rpx solid rgba(25, 186, 240, 0.2);
  border-radius: 40rpx;
}

.badge-icon {
  font-size: 28rpx;
  color: #19baf0;
}

.badge-text {
  font-size: 24rpx;
  color: #19baf0;
  font-weight: bold;
}

/* 技术雷达图 */
.technique-section {
  padding: 0 32rpx 32rpx;
}

.section-card {
  background: rgba(30, 41, 59, 0.4);
  border: 1rpx solid rgba(51, 65, 85, 0.6);
  border-radius: 48rpx;
  padding: 48rpx;
}

.chart-container {
  border: 2rpx solid rgba(25, 186, 240, 0.5);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 64rpx;
}

.section-icon {
  font-size: 40rpx;
  color: #19baf0;
}

.section-title {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 柱状图容器 */
.bars-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
  height: 448rpx;
  padding: 0 16rpx;
}

.bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  justify-content: flex-end;
}

.bar-value {
  font-size: 48rpx;
  color: #19baf0;
  font-weight: 900;
  margin-bottom: 24rpx;
}

.bar-track {
  width: 100%;
  max-width: 100rpx;
  height: 256rpx;
  background: rgba(25, 186, 240, 0.2);
  border-radius: 16rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.bar-fill {
  width: 100%;
  border-radius: 16rpx;
  position: relative;
  min-height: 8rpx;
  transition: height 1s ease-out;
  border-top: 1rpx solid rgba(25, 186, 240, 0.7);
}

.bar-power {
  background: rgba(25, 186, 240, 0.8);
}

.bar-angle {
  background: rgba(25, 186, 240, 0.6);
}

.bar-coordination {
  background: rgba(25, 186, 240, 0.7);
}

.bar-label {
  font-size: 24rpx;
  color: rgba(25, 186, 240, 0.7);
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-top: 24rpx;
}

/* 综合评分 */
.score-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 32rpx;
  margin-top: 32rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.05);
}

.score-label {
  font-size: 28rpx;
  color: #94a3b8;
}

.score-display {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.score-number {
  font-size: 80rpx;
  color: #19baf0;
  font-weight: 900;
  font-style: italic;
}

.score-total {
  font-size: 24rpx;
  color: rgba(25, 186, 240, 0.6);
  font-weight: bold;
}

/* 专业建议 */
.suggestions-section {
  padding: 0 32rpx 32rpx;
}

.section-title-text {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  padding: 0 8rpx 32rpx;
}

.suggestions-card {
  background: rgba(30, 41, 59, 0.4);
  border: 1rpx solid rgba(51, 65, 85, 0.6);
  border-radius: 48rpx;
  padding: 40rpx;
  display: flex;
  gap: 32rpx;
  position: relative;
  overflow: hidden;
}

.suggestions-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.suggestion-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(25, 186, 240, 0.2);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  min-width: 80rpx;
  max-width: 80rpx;
}

.suggestion-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.suggestion-title {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
}

.suggestion-desc {
  font-size: 24rpx;
  color: #94a3b8;
  line-height: 1.6;
}

.suggestion-decoration {
  width: 192rpx;
  flex-shrink: 0;
  height: 256rpx;
  border-radius: 24rpx;
  background: rgba(15, 23, 42, 1);
  border: 1rpx solid rgba(51, 65, 85, 0.8);
  overflow: hidden;
}

.decoration-img {
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

.decoration-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 120rpx;
  opacity: 0.3;
}

/* 排名信息 */
.ranking-section {
  padding: 0 32rpx 32rpx;
}

.ranking-card {
  background: rgba(30, 41, 59, 0.4);
  border: 1rpx solid rgba(51, 65, 85, 0.6);
  border-radius: 48rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.ranking-left {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.ranking-icon {
  width: 88rpx;
  height: 88rpx;
  background: rgba(234, 179, 8, 0.1);
  border: 1rpx solid rgba(234, 179, 8, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
}

.ranking-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.ranking-title {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
}

.ranking-subtitle {
  font-size: 24rpx;
  color: #64748b;
}

.ranking-right {
  text-align: right;
}

.ranking-value {
  font-size: 48rpx;
  color: #19baf0;
  font-weight: 900;
  font-style: italic;
}

.ranking-region {
  font-size: 20rpx;
  color: #64748b;
  text-transform: uppercase;
  font-weight: bold;
  letter-spacing: 2rpx;
  margin-top: 4rpx;
}

/* 底部操作栏 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(10, 18, 22, 0.95);
  backdrop-filter: blur(20px);
  padding: 48rpx 48rpx 80rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.05);
  z-index: 50;
}

.share-btn {
  width: 100%;
  height: 96rpx;
  background: #19baf0;
  color: #ffffff;
  border-radius: 32rpx;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 40rpx rgba(25, 186, 240, 0.3);
  margin-bottom: 48rpx;
}

.share-icon {
  font-size: 40rpx;
}

.footer-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16rpx;
}

.footer-label {
  font-size: 24rpx;
  color: #94a3b8;
}

.footer-icons {
  display: flex;
  gap: 32rpx;
}

.footer-icon {
  width: 88rpx;
  height: 88rpx;
  background: rgba(51, 65, 85, 0.8);
  border: 1rpx solid rgba(71, 85, 105, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

/* 加载状态 */
.empty-container {
  min-height: 60vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 32rpx;
  padding: 80rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #94a3b8;
}

.empty-btn {
  margin-top: 32rpx;
  padding: 24rpx 48rpx;
  background: rgba(25, 186, 240, 0.2);
  border: 1rpx solid rgba(25, 186, 240, 0.4);
  border-radius: 24rpx;
  color: #19baf0;
  font-size: 28rpx;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  gap: 32rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid rgba(255, 255, 255, 0.1);
  border-top: 8rpx solid #19baf0;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: #94a3b8;
}
