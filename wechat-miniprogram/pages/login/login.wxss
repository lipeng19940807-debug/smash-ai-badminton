/* pages/login/login.wxss */
.page-container {
  min-height: 100vh;
  background: #101d22;
  color: #ffffff;
  padding-bottom: 40rpx;
}

/* 顶部导航 */
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
}

.back-btn {
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: #ffffff;
}

.top-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: -0.03em;
}

.top-right {
  width: 96rpx;
}

/* Hero区域 */
.hero-section {
  padding: 0 32rpx 24rpx;
}

.hero-bg {
  width: 100%;
  min-height: 360rpx;
  background: linear-gradient(to bottom, rgba(16, 29, 34, 0.4), rgba(16, 29, 34, 1)),
              url('https://lh3.googleusercontent.com/aida-public/AB6AXuBJPCPXO7tkSsvN6SQtfnKNWjMinrEujFwMx5_SQsT7jcoHx5YoCv3i_rs9f5MiGisEvB65PCB2lq0_KB1zARDjeNa14R0ad9w9Ti7GaFs0ZMsISq35Q8v-8m4bHC5SdYkFzWwsZBLLWvlzh_stEKQVPT6IKQs4u9Z3c-gRFjmCYgkgRNsS0pm74GirYnI__1vZUJexFCou8hVsK8Pt5LgVNKafhAy5cpTVLqWl2WjqhOnmxoK69E7qLXFyVOTbwrLGJuotaBQDIHjn');
  background-size: cover;
  background-position: center;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.hero-icon-wrapper {
  background: rgba(25, 186, 240, 0.2);
  padding: 32rpx;
  border-radius: 50%;
}

.hero-icon {
  font-size: 100rpx;
}

/* 标题区域 */
.title-section {
  padding: 32rpx 48rpx 24rpx;
  text-align: center;
}

.main-title {
  display: block;
  font-size: 64rpx;
  font-weight: bold;
  line-height: 1.2;
  margin-bottom: 16rpx;
  letter-spacing: -0.02em;
}

.sub-title {
  display: block;
  font-size: 28rpx;
  color: #91bcca;
  line-height: 1.5;
}

/* 登录/注册切换 */
.auth-tabs {
  padding: 24rpx 48rpx;
}

.tab-container {
  display: flex;
  height: 96rpx;
  background: #192d34;
  border: 1rpx solid rgba(50, 90, 103, 0.3);
  border-radius: 9999rpx;
  padding: 8rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 9999rpx;
  font-size: 28rpx;
  color: #91bcca;
  font-weight: 600;
  transition: all 0.3s;
}

.tab-item.active {
  background: #19baf0;
  color: #ffffff;
  box-shadow: 0 4rpx 20rpx rgba(25, 186, 240, 0.3);
}

/* 表单区域 */
.form-section {
  padding: 32rpx 48rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-label {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
  padding: 0 8rpx;
}

.optional {
  font-size: 24rpx;
  color: #91bcca;
  font-weight: normal;
}

.input-wrapper {
  position: relative;
  width: 100%;
}

.form-input {
  width: 100%;
  height: 112rpx;
  padding: 0 112rpx 0 48rpx;
  background: #192d34;
  border: 2rpx solid #325a67;
  border-radius: 9999rpx;
  color: #ffffff;
  font-size: 32rpx;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #19baf0;
  box-shadow: 0 0 0 4rpx rgba(25, 186, 240, 0.2);
}

.form-input::placeholder {
  color: rgba(145, 188, 202, 0.5);
}

.input-icon {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  color: rgba(145, 188, 202, 0.5);
  pointer-events: none;
}

.input-icon.password-toggle {
  pointer-events: auto;
  cursor: pointer;
}

/* 提交按钮 */
.submit-section {
  padding: 32rpx 48rpx 24rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: #19baf0;
  color: #ffffff;
  border-radius: 9999rpx;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  box-shadow: 0 16rpx 40rpx rgba(25, 186, 240, 0.3);
}

.submit-btn::after {
  border: none;
}

.btn-icon {
  font-size: 40rpx;
}

/* 微信登录区域 */
.wechat-login-section {
  padding: 0 48rpx 24rpx;
}

.divider {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: rgba(50, 90, 103, 0.5);
}

.divider-text {
  font-size: 24rpx;
  color: #91bcca;
}

.wechat-btn {
  width: 100%;
  height: 96rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid rgba(50, 90, 103, 0.5);
  border-radius: 9999rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.wechat-btn::after {
  border: none;
}

.wechat-icon {
  font-size: 40rpx;
}

/* 错误提示 */
.error-tip {
  margin: 0 48rpx 24rpx;
  padding: 24rpx;
  background: rgba(239, 68, 68, 0.1);
  border: 1rpx solid rgba(239, 68, 68, 0.2);
  border-radius: 16rpx;
  color: #fca5a5;
  font-size: 28rpx;
  text-align: center;
  line-height: 1.6;
}

/* 开发提示 */
.dev-tip {
  margin: 0 48rpx 40rpx;
  padding: 24rpx;
  background: rgba(25, 186, 240, 0.1);
  border: 1rpx solid rgba(25, 186, 240, 0.2);
  border-radius: 16rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #91bcca;
  line-height: 1.6;
  white-space: pre-line;
}
