/* pages/profile/profile.wxss */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #0f172a 0%, #1e293b 100%);
  padding-bottom: 40rpx;
}

/* 顶部导航栏 */
.header {
  background: rgba(30, 41, 59, 0.8);
  border-bottom: 1rpx solid rgba(51, 65, 85, 0.6);
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
  backdrop-filter: blur(10rpx);
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  height: 88rpx;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 32rpx;
  background: rgba(25, 186, 240, 0.1);
  transition: all 0.3s;
}

.back-btn:active {
  background: rgba(25, 186, 240, 0.2);
}

.back-icon {
  font-size: 36rpx;
  color: #19baf0;
  font-weight: bold;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  flex: 1;
  text-align: center;
}

.header-right {
  width: 64rpx;
}

/* 用户信息卡片 */
.user-card {
  background: rgba(30, 41, 59, 0.6);
  border: 1rpx solid rgba(51, 65, 85, 0.6);
  border-radius: 32rpx;
  margin: 32rpx;
  padding: 48rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.user-avatar-section {
  position: relative;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 4rpx solid rgba(25, 186, 240, 0.3);
  background: rgba(15, 23, 42, 0.8);
}

.avatar-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  background: #19baf0;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border: 3rpx solid #0f172a;
}

.user-info-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.user-id {
  font-size: 24rpx;
  color: #94a3b8;
}

.user-email {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 统计数据 */
.stats-section {
  background: rgba(30, 41, 59, 0.6);
  border: 1rpx solid rgba(51, 65, 85, 0.6);
  border-radius: 24rpx;
  margin: 0 32rpx 32rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #19baf0;
}

.stat-label {
  font-size: 24rpx;
  color: #94a3b8;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(51, 65, 85, 0.6);
}

/* 功能菜单 */
.menu-section {
  margin: 0 32rpx 32rpx;
}

.menu-group {
  background: rgba(30, 41, 59, 0.6);
  border: 1rpx solid rgba(51, 65, 85, 0.6);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(51, 65, 85, 0.6);
  transition: all 0.3s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(25, 186, 240, 0.1);
}

.menu-icon {
  font-size: 40rpx;
  width: 64rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #e2e8f0;
  margin-left: 24rpx;
}

.menu-arrow {
  font-size: 36rpx;
  color: #94a3b8;
}

/* 登出按钮 */
.logout-section {
  margin: 0 32rpx;
}

.logout-btn {
  width: 100%;
  padding: 28rpx;
  background: rgba(239, 68, 68, 0.2);
  border: 1rpx solid rgba(239, 68, 68, 0.4);
  border-radius: 24rpx;
  color: #f87171;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.logout-btn:active {
  background: rgba(239, 68, 68, 0.3);
}
