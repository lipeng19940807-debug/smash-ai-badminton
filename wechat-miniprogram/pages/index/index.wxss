/* pages/index/index.wxss */
.page-container {
  min-height: 100vh;
  background: #0a1216;
  color: #ffffff;
  padding-bottom: 140rpx;
}

/* 顶部导航栏 */
.header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(10, 18, 22, 0.8);
  backdrop-filter: blur(10px);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #19baf0;
}

.user-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.welcome-text {
  font-size: 20rpx;
  color: #94a3b8;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.username {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
}

.login-btn-wrapper {
  margin-top: 8rpx;
}

.login-btn {
  background: #19baf0;
  color: #ffffff;
  border: none;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  line-height: 1.5;
}

.login-btn::after {
  border: none;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.icon-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(51, 65, 85, 0.8);
  border-radius: 50%;
  font-size: 40rpx;
}

/* 内容区域 */
.content {
  flex: 1;
}

/* Hero卡片 */
.hero-card {
  margin: 32rpx;
  padding: 240rpx 48rpx 48rpx;
  background: linear-gradient(180deg, rgba(10, 18, 22, 0.98) 0%, rgba(10, 18, 22, 0.3) 100%),
              url('https://lh3.googleusercontent.com/aida-public/AB6AXuDaq4ydYnwmn-wUgoqjzr2qjsNVgx-qy3aKjCj5G30OjOXflbZhZEujpZa0XlYEjBAOTqT6Nv93UiYcitaJrVp3UQwr-Sxm0yroGpmAeCzyPxiZ4cgbJ_Uxw5ctSxjBEUYv_dKMjNm2ET3XFbw3o3w45S8uOR8kUyVCtPwFHVZ6rdFGSfjQ0JwBcZzWoPmk60luteD8q_cNVwFYwQOnkaXweAXmDYyFMQVQukUaU5uIKbjRCihbKyh4Pr2ZK8SDqegYcqavSeJqzGRW');
  background-size: cover;
  background-position: center;
  border-radius: 32rpx;
  position: relative;
  overflow: hidden;
}

.hero-badge {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  background: rgba(25, 186, 240, 0.2);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(25, 186, 240, 0.3);
  border-radius: 40rpx;
  padding: 8rpx 24rpx;
}

.badge-text {
  font-size: 20rpx;
  color: #19baf0;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.hero-content {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  gap: 32rpx;
}

.hero-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.rank-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.rank-label {
  font-size: 28rpx;
  color: #94a3b8;
}

.rank-value {
  font-size: 28rpx;
  color: #19baf0;
  font-weight: bold;
}

.speed-display {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.speed-number {
  font-size: 120rpx;
  color: #ffffff;
  font-weight: 900;
  line-height: 1;
}

.speed-unit {
  font-size: 40rpx;
  color: #94a3b8;
  font-weight: bold;
}

.speed-label {
  font-size: 28rpx;
  color: #cbd5e1;
  font-weight: 500;
}

.detail-btn {
  min-width: 180rpx;
  height: 80rpx;
  padding: 0 32rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
}

/* 开始分析按钮 */
.action-section {
  padding: 16rpx 32rpx;
}

.start-btn {
  width: 100%;
  height: 128rpx;
  background: #19baf0;
  color: #0a1216;
  border-radius: 32rpx;
  font-size: 36rpx;
  font-weight: 900;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  letter-spacing: 2rpx;
}

.start-btn[disabled] {
  opacity: 0.5;
}

.neon-glow {
  box-shadow: 0 0 40rpx rgba(25, 186, 240, 0.4);
}

.btn-icon {
  font-size: 60rpx;
}

/* AI智能建议 */
.ai-insight-card {
  margin: 32rpx;
  padding: 32rpx;
  background: rgba(51, 65, 85, 0.4);
  border: 1rpx solid rgba(71, 85, 105, 0.5);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.insight-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: rgba(25, 186, 240, 0.1);
  border: 1rpx solid rgba(25, 186, 240, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 56rpx;
  flex-shrink: 0;
}

.insight-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.insight-label {
  font-size: 20rpx;
  color: #19baf0;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: 4rpx;
}

.insight-text {
  font-size: 28rpx;
  color: #cbd5e1;
  line-height: 1.5;
}

.highlight {
  color: #19baf0;
  font-weight: bold;
}

/* 最近记录 */
.records-section {
  margin: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 40rpx;
  color: #ffffff;
  font-weight: 900;
}

.section-more {
  font-size: 28rpx;
  color: #19baf0;
  font-weight: bold;
}

.records-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
}

.record-card {
  background: rgba(30, 41, 59, 0.4);
  border: 1rpx solid rgba(51, 65, 85, 0.5);
  border-radius: 32rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 20rpx;
}

.record-thumbnail-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  opacity: 0.3;
  background: rgba(15, 23, 42, 0.6);
}

.record-thumbnail {
  width: 100%;
  aspect-ratio: 16/9;
  background-size: cover;
  background-position: center;
  border-radius: 24rpx;
  position: relative;
  overflow: hidden;
}

.record-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.2);
  transition: background 0.3s;
}

.record-card:active .record-overlay {
  background: rgba(0, 0, 0, 0.4);
}

.record-speed-badge {
  position: absolute;
  bottom: 16rpx;
  left: 16rpx;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(10px);
  border-radius: 16rpx;
  padding: 8rpx 20rpx;
  font-size: 22rpx;
  color: #ffffff;
  font-weight: 900;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.speed-icon {
  color: #19baf0;
  font-size: 28rpx;
}

.record-info {
  padding: 0 8rpx 8rpx;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.record-title {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  flex: 1;
}

.record-tag {
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  background: rgba(34, 197, 94, 0.1);
  color: #22c55e;
  border: 1rpx solid rgba(34, 197, 94, 0.2);
  border-radius: 20rpx;
  font-weight: 900;
  text-transform: uppercase;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-date {
  font-size: 22rpx;
  color: #64748b;
}

.record-count {
  font-size: 22rpx;
  color: #64748b;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  gap: 32rpx;
}

.empty-icon {
  font-size: 120rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #94a3b8;
}

.empty-btn {
  background: #19baf0;
  color: #ffffff;
  padding: 24rpx 48rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 底部导航栏 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(10, 18, 22, 0.95);
  backdrop-filter: blur(20px);
  border-top: 1rpx solid rgba(51, 65, 85, 0.6);
  padding: 24rpx 64rpx 48rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 50;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  color: #64748b;
}

.nav-item.active {
  color: #19baf0;
}

.nav-icon {
  font-size: 56rpx;
}

.nav-label {
  font-size: 20rpx;
  font-weight: 900;
}

/* 分析中遮罩 */
.analyzing-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.analyzing-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid rgba(255, 255, 255, 0.1);
  border-top: 8rpx solid #19baf0;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.analyzing-text {
  font-size: 32rpx;
  color: #ffffff;
}
